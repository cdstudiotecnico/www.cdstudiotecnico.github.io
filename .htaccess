# Sicurezza e redirect per hosting Apache (Noamweb, ecc.)

# Forza HTTPS e WWW
RewriteEngine On
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.cdstudiotecnico.it/$1 [L,R=301]

# Protezione directory
Options -Indexes

# Protezione file sensibili
<FilesMatch "\.(env|ini|log|sh|bak|gitignore|htaccess)$">
  Order allow,deny
  Deny from all
</FilesMatch>
